                </ScrollView>
              </View>
              <View style={styles.popupButtons}>
                <TouchableOpacity onPress={() => {this.setModalVisible(false) }} style={styles.btnEquip}>
                  <Text style={styles.txtClose}>Equip</Text>
                </TouchableOpacity>
